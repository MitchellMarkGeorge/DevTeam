# Default Configuration

# Deployment mode
mode: local  # local or remote

# Local mode settings
local:
  approval_profile: strict  # strict, balanced, relaxed
  
  # Approval settings
  approvals:
    file_operations:
      require_for_create: false
      require_for_modify: false
      require_for_delete: true
    
    commands:
      safe_commands: no_approval
      build_commands: no_approval
      package_commands: require_approval
      destructive_commands: require_approval
    
  # Git settings
  git:
    auto_checkpoint: true
  
  # Security
  security:
    path_validation: strict
    forbidden_commands:
      - "rm -rf /"
      - "dd if=*"
    max_file_size: 10485760  # 10MB
  
  # Logging
  logging:
    level: INFO
    audit_log: true
    audit_log_path: ~/.local/share/devteam/audit/

# Remote mode settings
remote:
  approval_profile: balanced
  
  sandbox:
    provider: docker  # docker, e2b, daytona
    image: devteam/python:latest
    network_access: restricted
  
  approvals:
    # Generally more relaxed due to sandboxing
    file_operations:
      require_for_create: false
      require_for_modify: false
      require_for_delete: false
    
    commands:
      safe_commands: no_approval
      build_commands: no_approval
      package_commands: no_approval  # Sandboxed, safe
      network_commands: no_approval
      dangerous_commands: require_approval

# Model configuration
models:
  manager: claude-haiku-3-5
  architect: claude-sonnet-4-5
  developer: claude-sonnet-4-5
  qa: claude-sonnet-4-5
  
# Tools configuration
tools:
  web_search: true
  
# User information
user:
  name: John Doe
  email: john@example.com
  git_name: John Doe
  git_email: john@example.com